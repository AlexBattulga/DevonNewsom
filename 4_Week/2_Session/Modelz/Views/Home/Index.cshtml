@{
    ViewData["Title"] = "Home Page";
}
@model Ninja
<h2>Add a Ninja!</h2>
<h3><a href="/show">See a ninja!</a></h3>
<form asp-action="Create" asp-controller="Home" method="post">
    <div class="form-group">
        <span asp-validation-for="FirstName"></span>
        <label asp-for="FirstName"></label>
        <input type="text" asp-for="FirstName">
    </div>
    <div class="form-group">
        <span asp-validation-for="LastName"></span>
        <label asp-for="LastName"></label>
        <input type="text" asp-for="LastName">
    </div>
    <div class="form-group">
        <span asp-validation-for="Location"></span>
        <label asp-for="Location"></label>
        <input type="text" asp-for="Location">
    </div>
    <input type="submit" value="Add Ninja!">
</form>